<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:fitsSystemWindows="true"
    android:background="#F7FFFFFF">

    <ScrollView
        android:layout_width="wrap_content"
        android:background="#F7FFFFFF"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F7FFFFFF"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                app:title="I - SMART COURSEWARE"
                app:titleTextColor="@color/white"
                tools:context="com.g2obregon.toolbar.center.title.MainActivity"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/box1"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:elevation="7dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="98dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/reviewers" />

                <TextView
                    android:id="@+id/textReview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:gravity="center"
                    android:shadowColor="#000000"
                    android:shadowDx="1.5"
                    android:shadowDy="1.3"
                    android:shadowRadius="50"
                    android:text="REVIEWERS"
                    android:textColor="@android:color/white"
                    android:textSize="45sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/box2"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:elevation="7dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/strands" />

                <TextView
                    android:id="@+id/textStrands"
                    android:layout_width="match_parent"
                    android:layout_height="116dp"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:gravity="center"
                    android:shadowColor="#000000"
                    android:shadowDx="1.5"
                    android:shadowDy="1.3"
                    android:shadowRadius="50"
                    android:text="STRANDS"
                    android:textColor="@android:color/white"
                    android:textSize="45sp" />

                <TextView
                    android:id="@+id/textTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:gravity="center"
                    android:paddingTop="70dp"
                    android:text="TIME"
                    android:visibility="invisible"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/box3"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:elevation="7dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="98dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/joblists" />

                <TextView
                    android:id="@+id/textJoblist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:gravity="center"
                    android:shadowColor="#000000"
                    android:shadowDx="1.5"
                    android:shadowDy="1.3"
                    android:shadowRadius="50"
                    android:text="JOBLIST"
                    android:textColor="@android:color/white"
                    android:textSize="45sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/box4"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:elevation="7dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="98dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/exam" />

                <TextView
                    android:id="@+id/textExam"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:gravity="center"
                    android:shadowColor="#000000"
                    android:shadowDx="1.5"
                    android:shadowDy="1.3"
                    android:shadowRadius="50"
                    android:text="EXAM"
                    android:textColor="@android:color/white"
                    android:textSize="45sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/box5"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:elevation="7dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="98dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/results" />

                <TextView
                    android:id="@+id/txtUseName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="40dp"
                    android:text=""
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txtUseEmailAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="160dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="40dp"
                    android:text=""
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/scoreMath"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="math"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp"
                    android:visibility="invisible"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:layout_gravity="center"
                    android:text="tm"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp"
                    android:visibility="invisible"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/scoreEng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="eng"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp"
                    android:visibility="invisible"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/te"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="te"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp"
                    android:visibility="invisible"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/scoreFil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:text="fil"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp"
                    android:visibility="invisible"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:text="tf"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp"
                    android:visibility="invisible"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/scoreScie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="60dp"
                    android:text="scie"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp"
                    android:visibility="invisible"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="60dp"
                    android:text="ts"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp"
                    android:visibility="invisible"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mainName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="40dp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/fetchMath"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:gravity="end"
                    android:text="fetchmath"
                    android:visibility="invisible"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/fetchMathTot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:gravity="end"
                    android:layout_marginTop="20dp"
                    android:text="fetchmathTot"
                    android:visibility="invisible"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/fetchEng"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:gravity="end"
                    android:layout_marginTop="40dp"
                    android:text="fetchEng"
                    android:visibility="invisible"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/fetchEngTot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:gravity="end"
                    android:layout_marginTop="50dp"
                    android:text="fetchEngTot"
                    android:visibility="invisible"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/fetchFil"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:gravity="end"
                    android:layout_marginTop="70dp"
                    android:text="fetchFil"
                    android:visibility="invisible"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/fetchFilTot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:gravity="end"
                    android:layout_marginTop="80dp"
                    android:text="fetchFilTot"
                    android:visibility="invisible"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/fetchScie"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:gravity="end"
                    android:layout_marginTop="95dp"
                    android:text="fetchScie"
                    android:visibility="invisible"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/fetchScieTot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:gravity="end"
                    android:layout_marginTop="105dp"
                    android:text="fetchScieTot"
                    android:visibility="invisible"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/fetchTotalScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=""
                    android:layout_marginTop="90dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10sp"
                    android:visibility="invisible"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fetchTotalItems"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=""
                    android:layout_marginTop="100dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="10sp"
                    android:visibility="invisible"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/totalSco"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="55dp"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:gravity="center"
                    android:text=""
                    android:visibility="invisible"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/totalItems"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:gravity="center"
                    android:layout_marginTop="85dp"
                    android:text=""
                    android:visibility="invisible"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtEvaluation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:gravity="center"
                    android:layout_marginTop="60dp"
                    android:text=""
                    android:visibility="invisible"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textScore"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:gravity="center"
                    android:shadowColor="#000000"
                    android:shadowDx="1.5"
                    android:shadowDy="1.3"
                    android:shadowRadius="50"
                    android:text="RESULT"
                    android:textColor="@android:color/white"
                    android:textSize="45sp" />
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu">
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>