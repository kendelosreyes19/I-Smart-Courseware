<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Profile"
    android:orientation="vertical"
    android:weightSum="4"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:elevation="10dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:layout_weight="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:id="@+id/go_imageProfile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1.0"
                android:fontFamily="@font/segoe_ui_bold"
                android:text="PROFILE INFO"
                android:textColor="@android:color/white"
                android:textSize="22sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:paddingTop="40dp"
                app:srcCompat="@drawable/user" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/profileName"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edit_text_background2"
                android:drawableStart="@drawable/profile_person3"
                android:drawablePadding="10dp"
                android:drawableTint="@color/black"
                android:fontFamily="@font/seg_ui_semibold"
                android:hint="Your Full Name"
                android:paddingLeft="30dp"
                android:paddingRight="5dp"
                android:textColor="@color/black"
                android:textColorHint="#505050"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="-5dp"
                android:background="#808080"
                android:src="@android:drawable/divider_horizontal_dark" />

            <EditText
                android:id="@+id/profileEmail"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edit_text_background2"
                android:clickable="false"
                android:cursorVisible="false"
                android:drawableStart="@drawable/profile_email"
                android:drawablePadding="13dp"
                android:drawableTint="@color/black"
                android:fontFamily="@font/seg_ui_semibold"
                android:hint="Your Email"
                android:paddingLeft="35dp"
                android:paddingRight="0dp"
                android:textColor="@color/black"
                android:textColorHint="#505050"
                android:textSize="15dp" />


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="-1dp"
                android:background="#808080"
                android:src="@android:drawable/divider_horizontal_dark" />

            <EditText
                android:id="@+id/profilePhone"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edit_text_background2"
                android:clickable="false"
                android:cursorVisible="false"
                android:drawableStart="@drawable/profile_phone2"
                android:drawablePadding="10dp"
                android:drawableTint="@color/black"
                android:fontFamily="@font/seg_ui_semibold"
                android:hint="Your Phone No"
                android:inputType="textPersonName"
                android:paddingLeft="30dp"
                android:paddingRight="0dp"
                android:textColor="@color/black"
                android:textColorHint="#505050"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="-1dp"
                android:background="#808080"
                android:src="@android:drawable/divider_horizontal_dark" />

            <EditText
                android:id="@+id/profileMainAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edit_text_background2"
                android:clickable="false"
                android:cursorVisible="false"
                android:drawableStart="@drawable/profile_location2"
                android:drawablePadding="10dp"
                android:drawableTint="@color/black"
                android:fontFamily="@font/seg_ui_semibold"
                android:hint="Your Address"
                android:inputType="textMultiLine"
                android:lines="2"
                android:paddingLeft="30dp"
                android:paddingRight="0dp"
                android:textColor="@color/black"
                android:textColorHint="#505050"
                android:textSize="15dp" />
        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:id="@+id/verifyMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/segoe_ui"
        android:text="Email Not Verfied"
        android:textColor="#C2185B"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <Button
                android:id="@+id/changeProfile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/button_background"
                android:elevation="20dp"
                android:fontFamily="@font/segoe_ui_bold"
                android:text="EDIT Profile"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <Button
                android:id="@+id/resendCode"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="35dp"
                android:background="@drawable/button_background"
                android:elevation="20dp"
                android:fontFamily="@font/segoe_ui_bold"
                android:text="Verify Email"
                android:textColor="@android:color/white"
                android:textSize="15sp" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>